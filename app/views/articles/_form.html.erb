<%= form_for(@article) do |f| %>
<ul>
  <% @article.errors.full_messages.each do |error| %>
  <li> <%= error %> </li>
  <% end %>
</ul>
<P>
<%= f.label :title %> <br>
<%= f.text_field :title %>
</p>

<P>
<%= f.label :body %> <br>
<%= f.text_field :body %>
</p>
<p>
  <%= f.label :tag_list %><br>
  <%= f.text_field :tag_list %>
</p>
<P>
<%= f.submit %>
</p>
<% end %>
